<mvc:View controllerName="logaligroup.Lists1.controller.ListTypes1"
         xmlns:mvc="sap.ui.core.mvc"
          displayBlock="true"
          xmlns="sap.m"
          xmlns:layout="sap.ui.layout"
          xmlns:core="sap.ui.core">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
                        <IconTabBar>
                            <items>

                                 <IconTabFilter text="{i18n>objectList}" class="Bold">
                                    <List items="{path : '/Products', 
                                                   filters: [{
                                                     path: 'Brand',
                                                     operator: 'EQ',
                                                     value1: 'Compaq'}]}">
                                        <items>
                                            <ObjectListItem title="{Material} {Brand} {Model}"
                                                            number="{Price}"
                                                            numberUnit="{Currency}"
                                                            type="Detail">
                                                <ObjectAttribute text="{Brand}"/>
                                                <ObjectAttribute text="{Weight}"/>
                                            </ObjectListItem>
                                        </items>
                                    </List>
                                 </IconTabFilter>

                                 <IconTabFilter text="{i18n>standardList}">
                                    <Select selectedKey="{/typeSelection}">
                                        <items>
                                            <core:Item key="None" text="{i18n>none}"/>
                                            <core:Item key="MultiSelect" text="{i18n>multiSelect}"/>
                                            <core:Item key="SingleSelect" text="{i18n>singleSelect}"/>
                                            <core:Item key="SingleSelectLeft" text="{i18n>singleSelectLeft}"/>
                                            <core:Item key="SingleSelectMaster" text="{i18n>singleSelectMaster}"/>
                                        </items>
                                    </Select>
                                     <Button text="{i18n>showSelectItems}" press=".onShowSelectRows" class="sapUiSmallMarginBegin"></Button>
                                     <Button text="{i18n>deleteSelectItems}" press=".onDeleteSelectRows" class="sapUiSmallMarginBegin"></Button>
                                       <List id="standardList" items="{ path: '/Products',
                                                      sorter: {
                                                          path: 'Brand',
                                                          descending: false,
                                                          group: true
                                                       },
                                                        groupHeaderFactory : '.getGroupHeader'}"
                                             mode="{/typeSelection}">
                                        <items>
                                         <StandardListItem title="{Material} [Brand} {Model}"
                                                           description="{Weight}"
                                                           info="{Price} {Currency}"
                                                           type="Active"/>
                                         </items>
                                        </List>
                                 </IconTabFilter>

                                 <IconTabFilter text="{i18n>inputList}">
                                     <List items="{/Products}" mode="Delete" delete="onDeleteRow">
                                         <items>
                                          <InputListItem label="{Brand}" >
                                            <Select items="{Properties}">
                                              <core:Item key="{Id}" text="{Id} ==> {Text}"/>
                                            </Select>
                                          </InputListItem>
                                        </items>  
                                    </List>
                                 </IconTabFilter>

                                <IconTabFilter text="{i18n>notificationList}" iconColor="Critical">
                                 <List  items="{/News}"> 
                                    <items>
                                        <NotificationListItem title="{Title}"
                                                              description="{Description}"
                                                              unread="{Unread}"
                                                              authorName="{Author}"
                                                              priority="{Priority}"
                                                              showCloseButton="{ShowCloseButton}">
                                        </NotificationListItem>
                                    </items>
                                 </List>
                             </IconTabFilter>


                                  <IconTabFilter text="{i18n>customList}" class="Bold" iconColor="Negative" iconDensityAware="true">
                                    <List  items="{/News}"> 
                                        <items>
                                         <CustomListItem>
                                            <layout:Grid defaultSpan="XL3 L3 M6 S12">
                                                <Text text="{Title}"/>
                                                <Text text="{Description}"/>
                                                <Text text="{Author}"/>
                                            </layout:Grid>
                                         </CustomListItem>
                                       </items>
                                    </List>
                                 </IconTabFilter>

                          </items>
                    </IconTabBar>
                   </content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>